# Environment Configuration
REACT_APP_ENV=development

# Firebase Configuration (Public Keys - Safe for client-side)
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

# Optional: Error Tracking
REACT_APP_SENTRY_DSN=

# API Configuration (DO NOT PUT ACTUAL API KEYS HERE)
# These are configured in Firebase Functions config instead:
# firebase functions:config:set cric.api_key="YOUR_KEY"
# firebase functions:config:set discord.webhook="YOUR_WEBHOOK_URL"
# firebase functions:config:set admin.allowed_emails="admin@example.com"
