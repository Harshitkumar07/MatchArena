  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:smoke": "cypress run --spec cypress/e2e/smoke.cy.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "firebase:init": "firebase init",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:emulators": "firebase emulators:start",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "predeploy": "npm run build",
    "deploy": "firebase deploy --only hosting",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "seed": "node scripts/seed.mjs",
    "deploy:staging": "npm run build && firebase deploy --only hosting:staging",
    "deploy:prod": "npm run build && firebase deploy --only hosting:production"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.4",
    "@playwright/test": "^1.41.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "cross-env": "^7.0.3",
    "cypress": "^15.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "firebase-tools": "^13.35.1",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.11.1",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
