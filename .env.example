# Environment Configuration
REACT_APP_ENV=development

# Firebase Configuration (Public Keys - Safe for client-side)
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

# Optional: Error Tracking
REACT_APP_SENTRY_DSN=

# API Keys for Client-side (Development Only)
REACT_APP_SPORTS_API_KEY=your-sports-api-key
REACT_APP_CRICKET_API_KEY=your-cricket-api-key

# API Configuration for Firebase Functions
# Run these commands to configure Firebase Functions:
# firebase functions:config:set cric.api_key="YOUR_CRICKET_API_KEY"
# firebase functions:config:set sports.api_key="YOUR_SPORTS_API_KEY"  
# firebase functions:config:set admin.allowed_emails="your-admin@email.com"

# API Endpoints (Updated)
REACT_APP_CRICKET_API_URL=https://api.cricapi.com/v1
REACT_APP_FOOTBALL_API_URL=https://v3.football.api-sports.io
REACT_APP_SPORTS_API_URL=https://www.thesportsdb.com/api/v1/json/3
